<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0" >
    
 <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_help" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_new_button" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="34dp"
        android:text="Select:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_use_manual_input" />

     <Button
         android:id="@+id/Button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView1"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="57dp"
         android:onClick="speakText1"
         android:text="Art" />

     <Button
         android:id="@+id/Button2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button1"
         android:layout_alignBottom="@+id/Button1"
         android:layout_toRightOf="@+id/imageButton2"
         android:onClick="speakText2"
         android:text="English" />

     <Button
         android:id="@+id/Button3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/Button2"
         android:layout_marginRight="70dp"
         android:layout_toLeftOf="@+id/imageButton1"
         android:onClick="speakText3"
         android:text="Gym" />

     <Button
         android:id="@+id/Button4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/Button3"
         android:layout_alignLeft="@+id/imageButton1"
         android:layout_marginLeft="34dp"
         android:onClick="speakText4"
         android:text="History" />

     <Button
         android:id="@+id/Button5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/Button1"
         android:layout_below="@+id/Button1"
         android:layout_marginTop="87dp"
         android:onClick="speakText5"
         android:text="Lunch" />

     <Button
         android:id="@+id/Button6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/Button5"
         android:layout_toRightOf="@+id/imageButton2"
         android:onClick="speakText6"
         android:text="Math" />

     <Button
         android:id="@+id/Button7"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button6"
         android:layout_alignBottom="@+id/Button6"
         android:layout_alignLeft="@+id/Button3"
         android:onClick="speakText7"
         android:text="Music" />

     <Button
         android:id="@+id/Button8"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button7"
         android:layout_alignBottom="@+id/Button7"
         android:layout_alignRight="@+id/Button4"
         android:onClick="speakText8"
         android:text="Science" />

     <Button
         android:id="@+id/Button9"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/Button5"
         android:layout_below="@+id/Button5"
         android:layout_marginTop="88dp"
         android:onClick="speakText9"
         android:text="Writing" />
    
</RelativeLayout>
