<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0" >
    
<ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_help" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_new_button" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageButton1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="34dp"
        android:text="Select:"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
     <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_use_manual_input" />

     <Button
         android:id="@+id/Button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView1"
         android:layout_below="@+id/textView1"
         android:layout_marginTop="76dp"
          android:onClick="speakText1"
         android:text="Challenging" />

     <Button
         android:id="@+id/Button3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button1"
         android:layout_alignBottom="@+id/Button1"
         android:layout_alignLeft="@+id/imageButton3"
          android:onClick="speakText3"
         android:text="Easy" />

     <Button
         android:id="@+id/Button4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button3"
         android:layout_alignBottom="@+id/Button3"
         android:layout_alignLeft="@+id/imageButton1"
         android:layout_marginLeft="51dp"
          android:onClick="speakText4"
         android:text="Fair" />

     <Button
         android:id="@+id/Button2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/Button1"
         android:layout_alignBottom="@+id/Button1"
         android:layout_marginLeft="38dp"
         android:layout_toRightOf="@+id/imageButton2"
          android:onClick="speakText2"
         android:text="Difficult" />
    
</RelativeLayout>
