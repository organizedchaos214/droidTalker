<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D0D0" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_help" />
    
        <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/button_new_button" />
    
	    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_use_manual_input" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageButton1"
	        android:layout_marginLeft="26dp"
	        android:layout_marginTop="54dp"
	        android:text="Select:"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <Button
	        android:id="@+id/Button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView1"
	        android:layout_below="@+id/textView1"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="54dp"
	          android:onClick="speakText1"
	        android:text="My Arms" />

	    <Button
	        android:id="@+id/Button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/Button1"
	        android:layout_alignBottom="@+id/Button1"
	        android:layout_marginLeft="40dp"
	        android:layout_toRightOf="@+id/imageButton2"
	          android:onClick="speakText2"
	        android:text="My Back" />

	    <Button
	        android:id="@+id/Button3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/Button4"
	        android:layout_alignBottom="@+id/Button4"
	        android:layout_alignLeft="@+id/imageButton3"
	          android:onClick="speakText3"
	        android:text="My Face" />

	    <Button
	        android:id="@+id/Button5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/Button1"
	        android:layout_below="@+id/Button1"
	        android:layout_marginTop="74dp"
	          android:onClick="speakText5"
	        android:text="My Hair" />

	    <Button
	        android:id="@+id/Button6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/Button5"
	        android:layout_alignBottom="@+id/Button5"
	        android:layout_alignLeft="@+id/Button2"
	          android:onClick="speakText6"
	        android:text="My Hands" />

	    <Button
	        android:id="@+id/Button7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/Button6"
	        android:layout_alignBottom="@+id/Button6"
	        android:layout_alignLeft="@+id/Button3"
	          android:onClick="speakText7"
	        android:text="My Legs" />

	    <Button
	        android:id="@+id/Button4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/Button5"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="33dp"
	          android:onClick="speakText4"
	        android:text="My Feet" />

</RelativeLayout>
